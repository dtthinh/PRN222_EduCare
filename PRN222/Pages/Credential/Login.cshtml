@page
@model PRN222.Pages.Credential.LoginModel
@{
	ViewData["Title"] = "Login";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="account.Email" class="form-label"></label>
                            <input asp-for="account.Email" class="form-control" autocomplete="EmailAddress" placeholder="Enter your email" />
                            <span asp-validation-for="account.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="account.Password" class="form-label"></label>
                            <input asp-for="account.Password" class="form-control" type="password" autocomplete="current-password" placeholder="Enter your password" />
                            <span asp-validation-for="account.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <div class="text-center">
                            <a asp-page="/Credential/Register">Don't have an account? Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model PRN222.Pages.Parent.ViewHealthRecordModel
@{
    ViewData["Title"] = "Health Record Detail";
}

<h2>Health Record Detail</h2>
@if (Model.HealthRecord == null)
{
    <div class="alert alert-danger">Health record not found.</div>
}
else
{
    <div class="form-group">
        <label>Full Name</label>
        <input class="form-control" value="@Model.HealthRecord.StudentName" readonly />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input class="form-control" value="@Model.HealthRecord.Gender" readonly />
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        <input class="form-control" value="@Model.HealthRecord.DateOfBirth.ToString("yyyy-MM-dd")" readonly />
    </div>
    <div class="form-group">
        <label>Student Code</label>
        <input class="form-control" value="@Model.HealthRecord.StudentCode" readonly />
    </div>
    <div class="form-group">
        <label>Class</label>
        <input class="form-control" value="@Model.HealthRecord.Student?.Class?.ClassName" readonly />
    </div>
    <div class="form-group">
        <label>Note</label>
        <textarea class="form-control" readonly>@Model.HealthRecord.Note</textarea>
    </div>
    <div class="form-group">
        <label>Height (cm)</label>
        <input class="form-control" value="@Model.HealthRecord.Height" readonly />
    </div>
    <div class="form-group">
        <label>Weight (kg)</label>
        <input class="form-control" value="@Model.HealthRecord.Weight" readonly />
    </div>
    <div class="form-group">
        <label>Left Eye</label>
        <input class="form-control" value="@Model.HealthRecord.LeftEye" readonly />
    </div>
    <div class="form-group">
        <label>Right Eye</label>
        <input class="form-control" value="@Model.HealthRecord.RightEye" readonly />
    </div>
}
<a class="btn btn-secondary mt-3" href="/Parent/HealthRecord">Back to List</a> 
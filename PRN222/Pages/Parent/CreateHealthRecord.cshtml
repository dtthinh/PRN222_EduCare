@page
@model PRN222.Pages.Parent.CreateHealthRecordModel
@{
    ViewData["Title"] = "Create Health Record";
}

<h2>Create Health Record</h2>

<form method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input class="form-control" value="@Model.Student?.Fullname" readonly />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input class="form-control" value="@Model.Student?.Gender" readonly />
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        <input class="form-control" value="@Model.Student?.DateOfBirth.ToString("yyyy-MM-dd")" readonly />
    </div>
    <div class="form-group">
        <label>Student Code</label>
        <input class="form-control" value="@Model.Student?.StudentCode" readonly />
    </div>
    <div class="form-group">
        <label>Class</label>
        <input class="form-control" value="@Model.Student?.Class?.ClassName" readonly />
    </div>
    <div class="form-group">
        <label>Note</label>
        <textarea class="form-control" asp-for="HealthRecord.Note"></textarea>
    </div>
    <div class="form-group">
        <label>Height (cm)</label>
        <input class="form-control" asp-for="HealthRecord.Height" type="number" step="1" />
    </div>
    <div class="form-group">
        <label>Weight (kg)</label>
        <input class="form-control" asp-for="HealthRecord.Weight" type="number" step="1" />
    </div>
    <div class="form-group">
        <label>Left Eye</label>
        <input class="form-control" asp-for="HealthRecord.LeftEye" type="number" step="1" />
    </div>
    <div class="form-group">
        <label>Right Eye</label>
        <input class="form-control" asp-for="HealthRecord.RightEye" type="number" step="1" />
    </div>
    <button type="submit" class="btn btn-success">Save Health Record</button>
</form> 
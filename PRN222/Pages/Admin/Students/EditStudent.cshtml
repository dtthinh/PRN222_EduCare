@page "{id:int}"
@model EditStudentModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh sửa thông tin Học sinh";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Student.StudentId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.Fullname" class="form-label fw-bold"></label>
                                <input asp-for="Student.Fullname" class="form-control" />
                                <span asp-validation-for="Student.Fullname" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.StudentCode" class="form-label fw-bold"></label>
                                <input asp-for="Student.StudentCode" class="form-control" />
                                <span asp-validation-for="Student.StudentCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.DateOfBirth" class="form-label fw-bold"></label>
                                <input asp-for="Student.DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.Gender" class="form-label fw-bold"></label>
                                <select asp-for="Student.Gender" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Male">Nam</option>
                                    <option value="Female">Nữ</option>
                                </select>
                                <span asp-validation-for="Student.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Student.ClassId" class="form-label fw-bold"></label>
                            <select asp-for="Student.ClassId" class="form-select" asp-items="Model.ClassOptions">
                                <option value="">-- Chọn lớp --</option>
                            </select>
                            <span asp-validation-for="Student.ClassId" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <strong>Lưu ý:</strong> Việc gán phụ huynh cho học sinh được thực hiện trong chức năng Quản lý Tài khoản.
                        </div>

                        <hr />
                        <div class="d-flex justify-content-end">
                            <a asp-page="Students" class="btn btn-secondary me-2">Hủy</a>
                            <button type="submit" class="btn btn-primary">Lưu Thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
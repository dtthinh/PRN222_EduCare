@page
@model VaccinesModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Danh Sách Vaccine";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                    <a class="btn btn-primary" asp-page="CreateVaccine">
                        <i class="fas fa-plus"></i> Thêm Vaccine Mới
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tên Vaccine</th>
                                <th>Mô tả</th>
                                <th style="width: 200px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Vaccines == null || !Model.Vaccines.Any())
                            {
                                <tr>
                                    <td colspan="3" class="text-center py-4">
                                        Không có vaccine nào trong hệ thống.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var vaccine in Model.Vaccines)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => vaccine.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => vaccine.Description)</td>
                                        <td>
                                            <a asp-page="DetailsVaccine" asp-route-id="@vaccine.VaccineId" class="btn btn-sm btn-info">Chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
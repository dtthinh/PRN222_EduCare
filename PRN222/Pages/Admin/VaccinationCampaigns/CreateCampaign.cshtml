@page
@model CreateCampaignModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Tạo chiến dịch tiêm mới";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Tên chiến dịch</label>
        <input asp-for="Campaign.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Vaccine</label>
        <select asp-for="Campaign.VaccineId" asp-items="Model.VaccineOptions" class="form-select" required>
            <option value="">-- Chọn vaccine --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Ngày tổ chức</label>
        <input asp-for="Campaign.Date" class="form-control" type="date" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Campaign.Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-page="Campaigns" class="btn btn-secondary">Quay lại</a>
</form>

@page
@model CampaignsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý Chiến dịch Tiêm chủng";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                    <a class="btn btn-primary" asp-page="CreateCampaign">
                        <i class="fas fa-plus"></i> Tạo Chiến dịch Mới
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tên chiến dịch</th>
                                <th>Ngày tổ chức</th>
                                <th>Loại Vaccine</th>
                                <th style="width: 200px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Campaigns == null || !Model.Campaigns.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        Chưa có chiến dịch tiêm chủng nào được tạo.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var campaign in Model.Campaigns)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => campaign.Name)</td>
                                        <td>@campaign.Date.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => campaign.Vaccine.Name)</td>
                                        <td>
                                            <a asp-page="DetailsCampaign" asp-route-id="@campaign.CampaignId" class="btn btn-sm btn-info">Chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
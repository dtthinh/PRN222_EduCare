@page "{id:int}"
@model DetailsVaccineModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thông Tin Chi Tiết Vaccine";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">@ViewData["Title"]: @Model.Vaccine.Name</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID Vaccine</dt>
                        <dd class="col-sm-9">@Model.Vaccine.VaccineId</dd>

                        <dt class="col-sm-3">Tên Vaccine</dt>
                        <dd class="col-sm-9">@Model.Vaccine.Name</dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">
                            <p style="white-space: pre-wrap;">@Model.Vaccine.Description</p>
                        </dd>
                    </dl>

                    <hr />

                    <h4>Các chiến dịch đã sử dụng vaccine này</h4>
                    @if (Model.Vaccine.Campaigns != null && Model.Vaccine.Campaigns.Any())
                    {
                        <ul class="list-group">
                            @foreach (var campaign in Model.Vaccine.Campaigns)
                            {
                                <li class="list-group-item">@campaign.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary">
                            Vaccine này chưa được sử dụng trong chiến dịch nào.
                        </div>
                    }
                </div>
                <div class="card-footer bg-light text-end">
                    <a asp-page="EditVaccine" asp-route-id="@Model.Vaccine.VaccineId" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-page="Vaccines" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
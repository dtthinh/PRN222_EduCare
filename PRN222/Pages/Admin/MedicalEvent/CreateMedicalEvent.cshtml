@page
@model CreateMedicalEventModel
@{
    ViewData["Title"] = "Tạo mới lịch tiêm / khám";
}
<h2>Tạo mới</h2>
<form method="post">
    <div class="form-group">
        <label>Học sinh</label>
        <select asp-for="MedicalEvent.StudentId" class="form-control" asp-items="Model.StudentsSelectList"></select>
    </div>
    <div class="form-group">
        <label>Y tá</label>
        <select asp-for="MedicalEvent.NurseId" class="form-control" asp-items="Model.NursesSelectList"></select>
    </div>
    <div class="form-group">
        <label>Loại</label>
        <input asp-for="MedicalEvent.Type" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ghi chú</label>
        <textarea asp-for="MedicalEvent.Note" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Ngày</label>
        <input asp-for="MedicalEvent.Date" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Tạo</button>
</form>

@page "{id:int}"
@model EditAccountModel
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<h2>Chỉnh sửa tài khoản</h2>

<form method="post">
    <input type="hidden" asp-for="Account.AccountID" />

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="Account.Fullname" class="form-control" />
    </div>

    <div class="form-group">
        <label>Vai trò</label>
        <select asp-for="Account.RoleID" class="form-control" asp-items="Model.RoleList"></select>
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="Account.Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
</form>

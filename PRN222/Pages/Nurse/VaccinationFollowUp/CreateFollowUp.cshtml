@page 
@model PRN222.Pages.Nurse.VaccinationFollowUp.CreateFollowUpModel
@{
    ViewData["Title"] = "Tạo phiếu theo dõi tiêm chủng";
}

<h2>Tạo phiếu theo dõi tiêm chủng cho hồ sơ @Model.RecordId</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <input type="hidden" asp-for="FollowUp.RecordId" />
    <div class="mb-3">
        <label asp-for="FollowUp.Date" class="form-label">Ngày theo dõi</label>
        <input asp-for="FollowUp.Date" class="form-control" type="date" />
        <span asp-validation-for="FollowUp.Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FollowUp.Reaction" class="form-label">Phản ứng</label>
        <input asp-for="FollowUp.Reaction" class="form-control" />
        <span asp-validation-for="FollowUp.Reaction" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FollowUp.Note" class="form-label">Ghi chú</label>
        <textarea asp-for="FollowUp.Note" class="form-control"></textarea>
        <span asp-validation-for="FollowUp.Note" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>

<a class="btn btn-primary mb-3" href="./FollowUp?recordId=@Model.RecordId">Quay lại phiếu theo dõi</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

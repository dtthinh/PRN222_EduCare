@page
@model PRN222.Pages.Nurse.VaccinationFollowUp.FollowUpModel
@{
    ViewData["Title"] = "Danh sách phiếu theo dõi tiêm chủng";
}

<h2>Danh sách phiếu theo dõi tiêm chủng cho hồ sơ @Model.RecordId</h2>

<a class="btn btn-primary mb-3" href="./CreateFollowUp?recordId=@Model.RecordId">Tạo phiếu theo dõi</a>

@if (Model.FollowUps != null && Model.FollowUps.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Mã phiếu theo dõi</th>
                <th>Ngày theo dõi</th>
                <th>Phản ứng</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var followUp in Model.FollowUps)
        {
            <tr>
                <td>@followUp.FollowUpId</td>
                <td>@followUp.Date.ToString("dd/MM/yyyy")</td>
                <td>@followUp.Reaction</td>
                <td>@followUp.Note</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Không tìm thấy phiếu theo dõi nào cho hồ sơ này.</div>
}

<a class="btn btn-primary mb-3" href="/Nurse/Vaccination/VaccinationRecord">Quay lại hồ sơ tiêm chủng</a>
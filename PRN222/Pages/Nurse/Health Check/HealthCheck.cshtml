@page
@model PRN222.Pages.Nurse.Health_Check.HealthCheckModel
@{
    ViewData["Title"] = "Health Checks";
}

<h1>Health Checks</h1>

<a asp-page="CreateHealthCheck" class="btn btn-success mb-3">Create Health Check List</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Health Check ID</th>
            <th>Student ID</th>
            <th>Nurse ID</th>
            <th>Parent ID</th>
            <th>Result</th>
            <th>Date</th>
            <th>Height (cm)</th>
            <th>Weight (kg)</th>
            <th>Left Eye</th>
            <th>Right Eye</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hc in Model.HealthChecks)
        {
            <tr>
                <td>@hc.HealthCheckID</td>
                <td>@hc.StudentID</td>
                <td>@hc.NurseID</td>
                <td>@(hc.ParentID?.ToString() ?? "N/A")</td>
                <td>@(hc.Result ?? "N/A")</td>
                <td>@hc.Date.ToString("yyyy-MM-dd")</td>
                <td>@(hc.Height?.ToString("F1") ?? "N/A")</td>
                <td>@(hc.Weight?.ToString("F1") ?? "N/A")</td>
                <td>@(hc.LeftEye?.ToString("F1") ?? "N/A")</td>
                <td>@(hc.RightEye?.ToString("F1") ?? "N/A")</td>
                <td>@(hc.HealthCheckDescription ?? "N/A")</td>
                <td>
                    <a asp-page="EditHealthCheck" asp-route-id="@hc.HealthCheckID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="DeleteHealthCheck" asp-route-id="@hc.HealthCheckID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary mb-3" href="/Nurse/NurseHomePage">Nurse Home Page</a>
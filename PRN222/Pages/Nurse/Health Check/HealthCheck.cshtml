@page
@model PRN222.Pages.Nurse.Health_Check.HealthCheckModel
@{
    ViewData["Title"] = "Danh sách phiếu khám sức khỏe";
}

<h1>Danh sách phiếu khám sức khỏe</h1>

<a asp-page="CreateHealthCheck" class="btn btn-success mb-3">Tạo phiếu khám sức khỏe</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã phiếu</th>
            <th>Học sinh</th>
            <th>Mã y tá</th>
            <th>Kết quả</th>
            <th>Ngày khám</th>
            <th>Chiều cao (cm)</th>
            <th>Cân nặng (kg)</th>
            <th>Mắt trái</th>
            <th>Mắt phải</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hc in Model.HealthChecks)
        {
            <tr>
                <td>@hc.HealthCheckID</td>
                <td>@hc.Student?.Fullname</td>
                <td>@hc.NurseID</td>
                <td>@(hc.Result ?? "Không có")</td>
                <td>@hc.Date.ToString("yyyy-MM-dd")</td>
                <td>@(hc.Height?.ToString("F1") ?? "Không có")</td>
                <td>@(hc.Weight?.ToString("F1") ?? "Không có")</td>
                <td>@(hc.LeftEye?.ToString("F1") ?? "Không có")</td>
                <td>@(hc.RightEye?.ToString("F1") ?? "Không có")</td>
                <td>@(hc.HealthCheckDescription ?? "Không có")</td>
                <td>
                    <a asp-page="EditHealthCheck" asp-route-id="@hc.HealthCheckID" class="btn btn-sm btn-warning">Chỉnh sửa</a>
                    <a asp-page="DeleteHealthCheck" asp-route-id="@hc.HealthCheckID" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary mb-3" href="/Nurse/NurseHomePage">Trang chủ y tá</a>
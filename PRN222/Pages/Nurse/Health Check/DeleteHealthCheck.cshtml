@page "{id:int}"
@model PRN222.Pages.Nurse.Health_Check.DeleteHealthCheckModel
@{
    ViewData["Title"] = "Xóa phiếu khám sức khỏe";
}

<h1>Xác nhận xóa</h1>

<div class="alert alert-danger">
    Bạn có chắc chắn muốn xóa phiếu khám sức khỏe với mã <strong>@Model.HealthCheck.HealthCheckID</strong> không?
</div>

<form method="post">
    <input type="hidden" asp-for="HealthCheck.HealthCheckID" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-page="HealthCheck" class="btn btn-secondary">Hủy</a>
</form>

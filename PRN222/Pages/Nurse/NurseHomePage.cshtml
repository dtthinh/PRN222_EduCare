@page
@model PRN222.Pages.Nurse.NurseHomePageModel
@{
    ViewData["Title"] = "Nurse Home Page";
}

<h2 class="text-center mt-4 mb-4">Nurse Home Page</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <ul class="list-group shadow-sm">
                <li class="list-group-item">
                    <a asp-page="MedicationRequest" class="text-decoration-none fw-bold text-primary">
                        <i class="bi bi-capsule"></i> Medication Request
                    </a>
                </li>
                <li class="list-group-item">
                    <a asp-page="Health Check/HealthCheck" class="text-decoration-none fw-bold text-success">
                        <i class="bi bi-heart-pulse"></i> Health Check
                    </a>
                </li>
                <li class="list-group-item">
                    <a asp-page="Consent/ViewConsent" class="text-decoration-none fw-bold text-warning">
                        <i class="bi bi-file-earmark-text"></i> View Consent
                    </a>
                </li>
                <li class="list-group-item">
                    <a asp-page="Vaccination/VaccinationRecord" class="text-decoration-none fw-bold text-info">
                        <i class="bi bi-journal-medical"></i> View Record
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Optionally include Bootstrap Icons CDN for icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

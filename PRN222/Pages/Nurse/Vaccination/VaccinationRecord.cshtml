@page
@model PRN222.Pages.Nurse.Vaccination.VaccinationRecordModel
@{
    ViewData["Title"] = "Vaccination Records";
}

<h2>Vaccination Records</h2>

@if (Model.Records != null && Model.Records.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Record ID</th>
                <th>Campaign</th>
                <th>Student</th>
                <th>Nurse</th>
                <th>Date Injected</th>
                <th>Result</th>
                <th>Immediate Reaction</th>
                <th>Note</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                <td>@record.RecordId</td>
                <td>@record.Campaign?.Name</td>
                <td>@record.Student?.Fullname</td>
                <td>@record.Nurse?.Fullname</td>
                <td>@record.DateInjected.ToString("dd/MM/yyyy")</td>
                <td>@record.Result</td>
                <td>@record.ImmediateReaction</td>
                <td>@record.Note</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Nurse/VaccinationFollowUp/FollowUp?recordId=@record.RecordId">View Follow Ups</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No vaccination records found.</div>
}
